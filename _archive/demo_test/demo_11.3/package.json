{
  "name": "12306-demo",
  "version": "1.0.0",
  "description": "12306购票系统演示项目 - 测试驱动开发版本",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/setup-test-env.js",
    "test": "node scripts/run-all-tests.js",
    "test:unit": "npm run test:unit:backend && npm run test:unit:frontend",
    "test:unit:backend": "cd backend && npm test",
    "test:unit:frontend": "cd frontend && npm test",
    "test:integration": "cd backend && npm run test:integration && cd ../frontend && npm run test:integration",
    "test:e2e": "npx playwright test",
    "test:ui-completeness": "node test/ui-completeness/ui-mapping-validation.test.js && node test/ui-completeness/api-coverage-report.js",
    "test:coverage": "npm run test:unit && npm run test:integration",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "db:reset": "cd backend && npx prisma db push --force-reset && npx tsx prisma/seed.ts",
    "db:seed": "cd backend && npx tsx prisma/seed.ts",
    "db:studio": "cd backend && npx prisma studio",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "rimraf backend/dist frontend/dist backend/node_modules frontend/node_modules node_modules",
    "install:all": "cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [
    "12306",
    "railway",
    "booking",
    "demo",
    "tdd",
    "test-driven-development",
    "react",
    "nodejs",
    "typescript",
    "sqlite",
    "prisma"
  ],
  "author": "12306 Demo Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/12306-demo.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/12306-demo/issues"
  },
  "homepage": "https://github.com/your-username/12306-demo#readme",
  "workspaces": [
    "backend",
    "frontend"
  ]
}